<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addPrescr_gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:columnCount="2"
    tools:context=".AddPrescriptionActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        android:text="Type"
        android:textAppearance="@style/CustomTextTitle" />

    <Spinner
        android:id="@+id/addPrescr_type_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        android:text="Frequency"
        android:textAppearance="@style/CustomTextTitle" />

    <Spinner
        android:id="@+id/addPrescr_freq_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        android:text="Quantity"
        android:textAppearance="@style/CustomTextTitle" />

    <EditText
        android:id="@+id/addPrescr_quantity_editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addPrescr_quantityUnit_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        android:text="Advice"
        android:textAppearance="@style/CustomTextTitle" />

    <Spinner
        android:id="@+id/addPrescr_advice_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        android:text="Notes"
        android:textAppearance="@style/CustomTextTitle" />

    <EditText
        android:id="@+id/addPrescr_notes_editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="2"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:inputType="textMultiLine" />

</GridLayout>