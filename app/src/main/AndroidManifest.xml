<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexapostolopoulos.bgltracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity.MainActivity"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddPatientActivity"
            android:label="Patient"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".AddMedicationActivity"
            android:label="Medication"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".AddGlucoseActivity"
            android:label="Glucose"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".AddInsulinActivity"
            android:label="Insulin"
            android:theme="@style/CustomTheme" />
    </application>

</manifest>